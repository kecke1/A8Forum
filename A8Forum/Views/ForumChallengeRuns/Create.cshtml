@model A8Forum.ViewModels.ForumChallengeRunViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Run</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TimeString" class="control-label"></label>
                <input asp-for="TimeString" class="form-control"/>
                <span asp-validation-for="TimeString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ForumChallenge" class="control-label"></label>
                <select asp-for="ForumChallenge.ForumChallengeId" class="form-control" asp-items="ViewBag.ChallengeId">
                    <option value="">-- Select Challenge --</option>
                </select>
                <span asp-validation-for="ForumChallenge.ForumChallengeId" class="text-danger"/>
            </div>
            <div class="form-group">
                <label asp-for="Member" class="control-label"></label>
                <select asp-for="Member.MemberId" class="form-control" asp-items="ViewBag.MemberId" id="membersDropdown">
                    <option value="">-- Select Member --</option>
                </select>
                <span asp-validation-for="Member.MemberId" class="text-danger"/>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle" class="control-label"></label>
                <select asp-for="Vehicle.VehicleId" class="form-control" asp-items="ViewBag.VehicleId" id="vehiclesDropdown">
                    <option value="">-- Select Vehicle --</option>
                </select>
                <span asp-validation-for="Vehicle.VehicleId" class="text-danger"/>
            </div>
            <div class="form-group">
                <label asp-for="Post" class="control-label"></label>
                <input asp-for="Post" class="form-control"/>
                <span asp-validation-for="Post" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () { $("#vehiclesDropdown").select2(); $("#membersDropdown").select2(); });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}